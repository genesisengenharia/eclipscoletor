<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rl"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginBottom="0dp"
	android:layout_marginLeft="0dp"
	android:layout_marginRight="0dp"
	android:layout_marginTop="0dp"
	android:orientation="vertical"
	android:padding="0dp" >


	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/row"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp"
				android:gravity="center_vertical" >

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="50"
					android:gravity="center" >

					<ImageButton
						android:id="@+id/landsat2008"
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:background="@drawable/state_color"
						android:src="@drawable/cloud_down"
						android:layout_alignParentTop="true"
						android:layout_centerHorizontal="true">
					</ImageButton>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:clickable="false"
						android:text="LANDSAT 2008"
						android:layout_alignParentBottom="true"
						android:layout_centerHorizontal="true" />
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="50"
					android:gravity="center" >

					<ImageButton
						android:id="@+id/rapideye"
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:background="@drawable/state_color"
						android:src="@drawable/cloud_down"
						android:layout_alignParentTop="true"
						android:layout_centerHorizontal="true">
					</ImageButton>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:clickable="false"
						android:text="RapidEye"
						android:layout_alignParentBottom="true"
						android:layout_centerHorizontal="true" />
				</RelativeLayout>


			</LinearLayout>
			<LinearLayout
				android:id="@+id/row0"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp"
				android:gravity="center_vertical" >

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="50"
					android:gravity="center" >

					<ImageButton
						android:id="@+id/spot"
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:background="@drawable/state_color"
						android:src="@drawable/cloud_down"
						android:layout_alignParentTop="true"
						android:layout_centerHorizontal="true">
					</ImageButton>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:clickable="false"
						android:text="SPOT-Assentamento"
						android:layout_alignParentBottom="true"
						android:layout_centerHorizontal="true" />
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="50"
					android:gravity="center" >

					<ImageButton
						android:id="@+id/mapabasemt"
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:background="@drawable/state_color"
						android:src="@drawable/cloud_down"
						android:layout_alignParentTop="true"
						android:layout_centerHorizontal="true">
					</ImageButton>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:clickable="false"
						android:text="MapaBaseMT"
						android:layout_alignParentBottom="true"
						android:layout_centerHorizontal="true" />
				</RelativeLayout>
			</LinearLayout>


		</LinearLayout>
	</ScrollView>

</LinearLayout>
